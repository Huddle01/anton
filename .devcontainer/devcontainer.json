{
    "name": "OpenStack Kolla Dev",
    "image": "ubuntu:24.04",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "redhat.ansible"
            ]
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y git vim curl wget openssh-client && curl -LsSf https://astral.sh/uv/install.sh | sh",
    "remoteUser": "root"
}